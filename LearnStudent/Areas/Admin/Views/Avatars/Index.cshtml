@model List<AvatarsUpload>

<div class="card shadow border-0 mt-4">
<div class="card-header bg-secondary bg-gradient ml-0 py-3">
    <div class="row">
        <div class="col-12 text-center">
                <h2 class="text-white py-2">Lista Avatarów</h2>
        </div>
    </div>
</div>
<div class="card-body p-4">
    <div class="row  pb-3">
        <div class="col-6">
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Avatars" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>   Dodaj nowy Avatar
            </a>
        </div>
    </div>


    <table class="table table-bordered table-striped">
        <thead>

            <tr>
                <th>
                    Avatar
                </th>
                <th>
                    Dispaly
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
                @foreach (var obj in Model.OrderBy(u => u.Display))
                {

                    <tr>
                        <td>@obj.imgPath</td>
                        <td>
                            @obj.Display
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Avatars" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edytuj
                                </a>
                                <a asp-controller="Avatars" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Usuń
                                </a>
                            </div>
                        </td>
                    </tr>
                }
        </tbody>
    </table>
</div>
</div>
