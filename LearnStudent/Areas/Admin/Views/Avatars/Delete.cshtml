@model AvatarsUpload

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Usuń Kategorię</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">

                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Id" disabled class="form-control border-0 shadow" />
                    <label asp-for="Id" class="ms-2"></label>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="imgPath" disabled class="form-control border-0 shadow" />
                    <label asp-for="imgPath" class="ms-2"></label>

                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Usuń</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Avatars" asp-action="Index" class="btn btn-secondary border form-control">Wróć do Listy</a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>




