@model IEnumerable<Quiz>

<div class="container">
    <div class="row">
        <form method="post" action="@Url.Action("CheckAnswers", "Quiz", new { area = "User" })">

            @foreach (var quiz in Model)
            {
                <div class="col-12 mb-4">
                    <h2 class="card-title h3 text-dark text-uppercase">@quiz.Title</h2>
                    @Html.Raw(quiz.Question)

                    <div class="form-check">
                        <input type="radio" id="answerI-@quiz.Id" name="@quiz.Id" value="AnswerI" class="form-check-input" />
                        <label class="form-check-label" for="answerI-@quiz.Id">@Html.Raw(quiz.AnswerI)</label>
                    </div>

                    <div class="form-check">
                        <input type="radio" id="answerII-@quiz.Id" name="@quiz.Id" value="AnswerII" class="form-check-input" />
                        <label class="form-check-label" for="answerII-@quiz.Id">@Html.Raw(quiz.AnswerII)</label>
                    </div>

                    <div class="form-check">
                        <input type="radio" id="answerIII-@quiz.Id" name="@quiz.Id" value="AnswerIII" class="form-check-input" />
                        <label class="form-check-label" for="answerIII-@quiz.Id">@Html.Raw(quiz.AnswerIII)</label>
                    </div>

                    <div class="form-check">
                        <input type="radio" id="answerIV-@quiz.Id" name="@quiz.Id" value="AnswerIV" class="form-check-input" />
                        <label class="form-check-label" for="answerIV-@quiz.Id">@Html.Raw(quiz.AnswerIV)</label>
                    </div>
                </div>
            }

            <div class="col-12 text-center">
                <button type="submit" class="btn btn-primary">Sprawdź</button>
            </div>
        </form>
    </div>
</div>
